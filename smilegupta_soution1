using namespace std;

int main() {
		int t;
	int n,i=0,sum1=0,sum2=0,ans=1,m;
	
	cin>>t;
	while(t--)
	{
	    cin>>n;
	    int arr[n];
	    m=n/2;
	    
	    for(i=0;i<n;i++)
	    {
	        cin>>arr[i];
	    }
	    for(i=0;i<n;i++)
	    { 
	        if(i<m)
	        {
	            sum1=sum1+arr[i];
	        }
	        else
	        {
	            sum2=sum2+arr[i];
	        }
	        
	    }
	    ans=sum1*sum2;
	    cout<<ans<<endl;
	    ans=1; sum1=0; sum2=0;
	}
	return 0;
}
